  INT_VAR
    kit_class = 3
    mixed = RESOLVE_STR_REF (@100901)
    lower = RESOLVE_STR_REF (@100902)
    help = RESOLVE_STR_REF (@100903)
  STR_VAR
    kit_name = ~D2%kitname%~
