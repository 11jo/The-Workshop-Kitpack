//
//removed by Restoration or Greater Restoration
ACTION_PHP_EACH d2restoration AS spell => type BEGIN
  ACTION_IF !(~%type%~ STRING_CONTAINS_REGEXP ~restore~) BEGIN    // if 'type' DOES contain 'restore'
    ACTION_IF (FILE_EXISTS_IN_GAME ~%spell%.spl~) BEGIN
      COPY_EXISTING ~%spell%.spl~  ~override~
        LPF d2_remove_effects_on_cast STR_VAR resource=~%s2%a~ insert=last END
        LPF d2_remove_effects_on_cast STR_VAR resource=~%s3%a~ insert=last END
        LPF d2_remove_effects_on_cast STR_VAR resource=~%s4%a~ insert=last END
        LPF d2_remove_effects_on_cast STR_VAR resource=~%s5%a~ insert=last END
      BUT_ONLY
    END
  END
END


