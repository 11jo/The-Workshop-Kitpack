  WRITE_LONG 0x24 9
  WRITE_LONG 0x28 0

COPY ~%passives%/opcode206.SPL~   ~override/%e6%.SPL~    // set snares unusable
  LPF ALTER_EFFECT STR_VAR resource=~SPCL412~ END
  LPF CLONE_EFFECT STR_VAR resource=~D5CL412~ END


//remove set snares (for multiclass kits)
