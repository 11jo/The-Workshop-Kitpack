  LPF d2_kit_ability_adder INT_VAR level=9 STR_VAR resource=~%s2%~ END
  LPF d2_kit_ability_adder INT_VAR level=13 STR_VAR resource=~%s2%~ END
  LPF d2_kit_ability_adder INT_VAR level=18 STR_VAR resource=~%s2%~ END
