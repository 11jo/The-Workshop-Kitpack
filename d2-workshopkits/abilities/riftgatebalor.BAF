		ReallyForceSpell(Myself,WIZARD_ABI_DALZIMS_HORRID_WILTING)
		ReallyForceSpell(LastSeenBy(),WIZARD_NPC_SYMBOL_FEAR)
		DestroyItem("%w8%v")
END

