IF
	OnCreation()
	Global("d2phase1","LOCALS",1)
THEN
	RESPONSE #100
		SetGlobal("d2phase1","LOCALS",0)
		SetGlobal("d2phase2","LOCALS",0)
		SetGlobal("d2phase3","LOCALS",0)
		SetGlobal("d2final","LOCALS",0)
END

IF
	See([ANYONE])
	!Global("d2phase1","LOCALS",1)
THEN
	RESPONSE #100
		SetGlobal("d2phase1","LOCALS",1)
		ApplySpell(Myself,WIZARD_STONE_SKIN)
		ReallyForceSpell(LastSeenBy(),WIZARD_NPC_SYMBOL_STUN)
		ForceSpell(Myself,WIZARD_SUN_FIRE)
		DestroyItem("%w8%u")
END

